
@{
    ViewData["Title"] = "Create Cover Type";
}
@model CoverType

<form method="post">
    <div class="border p-3 p-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Cover Type</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:fit-content">Create</button>
        <a asp-controller="CoverType" asp-action="Index" class="btn btn-secondary" style="width:fit-content">Go to Cover Type List</a>
    </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


