@model ShoppingCart
@using System.Globalization

<form method="post">
    <input hidden asp-for="ProductId" />
    <div class="card container pt-4 pb-4 mt-2 mb-2">
        <div class="card-header bg-primary text-light ml-0  row">
            <div class="col-12 col-md-6">
                <h1 class="text-dark-50">@Model.Product.Title</h1>
                <p class="text-danger">By @Model.Product.Author</p>
            </div>
            <div class="col-12 col-md-6 text-end pt-4">
                <span class="badge bg-dark pt-2" style="height:30px;">@Model.Product.CoverType.Name</span>
                <span class="badge btn-success pt-2" style="height:30px;">@Model.Product.Category.Name</span>
            </div>
        </div>

        <div class="card-body row container">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-8 col-lg-8">
                        <div class="row">
                            <h5 class="text-muted">ISBN:@Model.Product.ISBN</h5>
                        </div>
                        <div class="row">
                            <h5 class="text-muted pb-2">List Price:<strike>@Model.Product.ListPrice.ToString("c", new System.Globalization.CultureInfo("en-US"))</strike></h5>
                        </div>

                        <div class="row text-center pl-2">
                            <div class="p-1 col-2 bg-primary border-bottom">
                                <div style="color:darkorange">Quantity</div>
                            </div>

                            <div class="p-1 col-2 bg-primary border-bottom">
                                <div style="color:darkorange">1-50</div>
                            </div>


                            <div class="p-1 col-2 bg-primary border-bottom">
                                <div style="color:darkorange">51-100</div>
                            </div>
                            <div class="p-1 col-2 bg-primary border-bottom">
                                <div style="color:darkorange">100+</div>
                            </div>
                        </div>
                        <div class="row text-center pl-2" style="color:maroon; font-weight:bold">
                            <div class="p-1 col-2 border">
                                <div>Price</div>
                            </div>
                            <div class="p-1 col-2 border">
                                <div>@Model.Product.Price.ToString("c", new System.Globalization.CultureInfo("en-US"))</div>
                            </div>

                            <div class="p-1 col-2 border">
                                <div>@Model.Product.Price50.ToString("c", new System.Globalization.CultureInfo("en-US"))</div>
                            </div>
                            <div class="p-1 col-2 border">
                                <div>@Model.Product.Price100.ToString("c", new System.Globalization.CultureInfo("en-US"))</div>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <p class="text-info" style="color:darkorange">DESCRIPTION: @Html.Raw(Model.Product.Description)</p>
                        </div>
                        <div class="row pl-2">
                            <div class="col-2 text-success"><h5>Count</h5></div>
                            <div class="col-10"><input asp-for="Count" class="form-control" /></div>
                        </div>

                    </div>
                    <div class="col-12 col-lg-3 offset-lg-1 text-center">
                        <img src="@Model.Product.ImageUrl" width="100%" class="rounded" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1 ">
                    <a class="btn btn-success form-control" style="height:50px;" asp-action="Index">Back to Home</a>
                </div>
                <div class="col-12 col-md-6 pb-1 ">
                    <button type="submit" value="Add to Cart" class="btn btn-primary form-control" style="height:50px;">Add to Cart</button>
                </div>
            </div>
        </div>
    </div>
</form>